<div class="container-fluid">
  <div class="row">
    <div class="col-12 center">
    <img src="/assets/images/burger.png" alt="Smiling Burger" class="mx-auto center" />
    </div>
  </div>
  <div class="row">
    <div class="col-sm-4 text-center"></div>
    <div class="col-sm-4"> 
    <h1 class="text-center">Eet Da Burger!</h1>
    </div>
    <div class="col-sm-4 text-center"></div>
    </div>
  <div class="row">
    <div class="col-sm-4 text-center"> Burger WishList </div>
    <div class="col-sm-4"> 
    <h1 class="text-center"></h1>
    </div>
    <div class="col-sm-4 text-center"> Burgers Eaten </div>
    </div>

    <div class="row"></div>


    
    <div class="row"><p></p></div>
    <div class="row">
      <div class="col-sm-4">
        <ul class="list-group">
          {{#each burgers}}
          {{#unless eaten}}
          {{> burgers/burger-block eaten=false}}
          {{/unless}}
          {{/each}}
        </ul>
      </div>

      <div class="col-sm-4">
        <div id="subhead">Tell us which burger you'd like to eat.</div>
        <form class="create-form">

          <div class="form-group">
            <input type="text" id="burg" name="name" placeholder="enter your delicious burger here">
          </div>

          <button type="submit" class="btn btn-dark btn-block">Add to my Wish List</button>
        </form>
      </div>
    
    <div class="col-sm-4">

      <ul>
        {{#each burgers}}
        {{#if eaten}}
        {{> burgers/burger-block eaten=true}}
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>

</div>